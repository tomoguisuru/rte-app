<div class="rts-form user-login">
        <div class="rts-form__item">
            <div class="rts-field">
                <div class="rts-field__bin">
                    <label class="rts-field__label" for="user-email">Email</label>
                    <Input
                        id="user-email"
                        class="rts-field__input"
                        @type="email"
                        @value={{this.email}}
                    />
                </div>
            </div>
        </div>

        <div class="rts-form__item">
            <div class="rts-field">
                <div class="rts-field__bin">
                    <label class="rts-field__label" for="user-password">Password</label>
                    <Input
                        id="user-password"
                        class="rts-field__input"
                        @type="password"
                        @value={{this.password}}
                    />
                </div>
            </div>
        </div>

    <button type="submit" class="rts-btn rts-btn--primary" {{on "click" this.login}}>Login</button>

    {{#if this.errorMessage}}
    <p>{{this.errorMessage}}</p>
    {{/if}}
</div>