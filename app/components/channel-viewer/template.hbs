<div class="rts-stream {{if this.isActive "is-active"}}" {{did-insert this.onInsert}} {{on "click" this.toggleActive}}>
    <video
        autoplay
    ></video>
    <div class="rts-stream__head">
        <h3 class="rts-stream__title">{{@stream.title}}</h3>
        <div class="rts-stream__controls">
            <button class="rts-btn rts-btn--sm rts-btn--icon rts-btn--alert" type="button"><span class="material-icons md-18">volume_off</span></button>
        </div>
    </div>
</div>
