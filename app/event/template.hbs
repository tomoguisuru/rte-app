<div class="rts-wrap">
    <header class="rts-hdr">
        <div class="rts-hdr__title">
            {{#if @model.state}}
            <span class="rts-pill rts-hdr__status {{concat 'rts-pill--' @model.state}}">{{@model.state}}</span>
            {{/if}}
            <h1>{{@model.title}}</h1>
        </div>
        <div class="rts-hdr__brand">
            <span>powered by</span>
            <img src="/images/vzm_rgb_r.png" alt="verizon media" />
        </div>
    </header>
    <main class="rts-main">
        {{#if (eq @model.state 'complete')}}
            <div class="notification">
                This event has ended
            </div>
        {{else if (not-eq @model.state 'live')}}
            <div class="notification">
                It looks like we're not quite ready yet, sorry
            </div>
        {{/if}}

        <div class="rts-streams">
            {{#each this.manifestServices.streams as |stream|}}
                <ChannelViewerNew
                    @stream={{stream}}
                >
                </ChannelViewerNew>
            {{/each}}
        </div>
        {{!--{{#if this.showStreamList}}
        <aside class="rts-tray">
            {{#each this.streams as |stream|}}
                <ChannelViewerNew
                    @stream={{stream}}
                >
                </ChannelViewerNew>
            {{/each}}
        </aside>
        {{/if}} --}}
        {{outlet}}
    </main>
    <footer class="rts-ftr">
        <div class="rts-ftr__controls" id="footer_left_controls">
            {{#if this.hasJoined}}
                <button class="rts-btn rts-btn--icon"><span class="material-icons md-20">view_module</span></button>
            {{/if}}
        </div>
        <div class="rts-ftr__controls">
            <PortalTarget @name="footer-center"/>
        </div>
        <div class="rts-ftr__controls">
            <button class="rts-btn rts-btn--icon {{if this.showStreamList "rts-btn--secondary"}}" {{on 'click' this.toggleStreamList}}><span class="material-icons md-20">view_sidebar</span></button>
            <div>
                <PortalTarget @name="footer-right"/>
            </div>
        </div>
    </footer>
</div>
