<RtsTray
  @trayClass="publisher"
>
  <:content>
    <PublisherWindow
      @hideSettings={{this.hasPublisher}}
      @isJoined={{(not this.hasPublisher)}}
      @onJoin={{this.publishStream}}
      @onLeave={{this.stop}}
      @onAudioToggle={{this.toggleAudioInput}}
      @onVideoToggle={{this.toggleVideoInput}}
    />
  </:content>
</RtsTray>