<RtsTray
  @trayClass="publisher"
>
  <:content>
    <PublisherWindow
      @hideSettings={{hasPublisher}}
      @isJoined={{(not hasPublisher)}}
      @onJoin={{publishStream}}
      @onLeave={{stop}}
      @onAudioToggle={{toggleAudioInput}}
      @onVideoToggle={{toggleVideoInput}}
    />
  </:content>
</RtsTray>