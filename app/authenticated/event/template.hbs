{{#if (eq model.state 'complete')}}
    <div class="notification">
        This event has ended
    </div>
{{else if (eq manifestService.streams.length 0)}}
    <div class="notification">
        It looks like we're not quite ready yet, sorry
    </div>
{{/if}}

<div class="rts-streams">
    {{#each manifestService.streams as |stream|}}
        <PhenixChannel
            @stream={{stream}}
        >
        </PhenixChannel>
    {{/each}}
</div>

{{outlet}}

<Portal @target="header-title">
    {{#if model.state}}
    <span class="rts-pill rts-hdr__status {{concat 'rts-pill--' model.state}}">
        {{model.state}}
    </span>
    {{/if}}

    <h1>{{model.title}}</h1>
</Portal>

<Portal @target="footer-left">
    {{#if hasJoined}}
        <button class="rts-btn rts-btn--icon">
            <span class="material-icons md-20">view_module</span>
        </button>
    {{/if}}
</Portal>

<Portal @target="footer-right">
    <button class="rts-btn rts-btn--icon {{if showStreamList "rts-btn--secondary"}}" {{on 'click' this.toggleStreamList}}>
        <span class="material-icons md-20">view_sidebar</span>
    </button>
</Portal>
